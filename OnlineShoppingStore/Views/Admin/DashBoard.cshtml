@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex">
    <!-- Sidebar -->
    <div class="bg-dark text-white p-3 vh-100" style="width: 250px;">
        <h4 class="text-center mb-4">Admin Panel</h4>
        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a asp-action="AddProduct" asp-controller="Admin" class="nav-link text-white">➕ Add Product</a>
            </li>
            <li class="nav-item mb-2">
                <a asp-action="UpdateProduct" asp-controller="Admin" asp-route-productId="1" class="nav-link text-white">✏️ Update Product</a>
            </li>
            <li class="nav-item mb-2">
                <a asp-action="DeleteProduct" asp-controller="Admin" asp-route-productId="1" class="nav-link text-white">🗑️ Delete Product</a>
            </li>
            <hr class="bg-light" />
            <li class="nav-item mb-2">
                <a asp-action="ShowAllOrders" asp-controller="Admin" class="nav-link text-white">📋 Show All Orders</a>
            </li>
            <li class="nav-item mb-2">
                <a asp-action="ShowOrderDetails" asp-controller="Admin" asp-route-orderId="1" class="nav-link text-white">🔍 Order Details</a>
            </li>
            <li class="nav-item mb-2">
                <a asp-action="UpdateOrderStatus" asp-controller="Admin" asp-route-orderId="1" class="nav-link text-white">🔄 Update Order</a>
            </li>
            <hr class="bg-light" />
            <li class="nav-item mb-2">
                <a asp-action="ShowAllUsers" asp-controller="Admin" class="nav-link text-white">👤 Show All Users</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 p-4">
        <h2 class="mb-4">Welcome to Admin Dashboard</h2>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="card-title">Products</h5>
                        <p class="text-muted">Manage products in your store.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="card-title">Orders</h5>
                        <p class="text-muted">Track and update customer orders.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <h5 class="card-title">Users</h5>
                        <p class="text-muted">View and manage registered users.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


