@model List<Product>

@{
    ViewData["Title"] = "Search Product";
}

<div class="container mt-4">
    <h2 class="mb-3">🔍 Search For Product</h2>

    <form method="get" asp-action="SearchForProduct" class="row g-3 align-items-end">
        <div class="col-auto">
            <label for="productId" class="form-label">
                Product ID <small class="text-muted">(optional)</small>
            </label>
            <input type="text" name="productId" id="productId"
                   class="form-control form-control-sm" style="width:120px;" />
        </div>

        <div class="col-auto">
            <label for="name" class="form-label">
                Product Name <small class="text-muted">(optional)</small>
            </label>
            <input type="text" name="name" id="name"
                   class="form-control form-control-sm" style="width:180px;" />
        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-primary btn-sm px-3">Search</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="mt-4">
            <h5>Results (@Model.Count)</h5>
            <table class="table table-hover table-sm align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th style="width:150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.Name</td>
                            <td>$@product.Price</td>
                            <td>@product.Category?.Name</td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="~/images/Products/@product.ImageUrl"
                                         alt="@product.Name"
                                         width="60"
                                         class="rounded" />
                                }
                                else
                                {
                                    <span class="text-muted">No image</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="EditProduct" asp-route-ProductId="@product.ProductId" asp-route-temp="true"
                                       class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="DeleteProduct" asp-route-ProductId="@product.ProductId" asp-route-temp="true"
                                       onclick="return confirm('Are you sure you want to delete this product?');"
                                       class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">No products found.</div>
    }
</div>
