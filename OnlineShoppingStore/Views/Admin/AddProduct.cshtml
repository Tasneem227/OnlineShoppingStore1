@using OnlineShoppingStore.ViewModel.AdminViewModel
@model AddProductViewModel

@{
    ViewData["Title"] = "Add Product";
    SelectList CategoryOptions = new SelectList(Model.Categories, "CategoryId", "Name");
}

<div class="container mt-5">
    <h2 class="mb-4">Add New Product</h2>

    <form asp-action="SaveNewProduct" asp-controller="Admin" method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Brand" class="form-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="col-md-12 mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="StockQuantity" class="form-label"></label>
                <input asp-for="StockQuantity" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" asp-items="CategoryOptions" class="form-select">
                    <option >-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input type="file" asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save Product</button>
        <a asp-action="DashBoard" class="btn btn-secondary">Cancel</a>
    </form>
</div>

