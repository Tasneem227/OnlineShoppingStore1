@model List<Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Products</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <link rel="stylesheet" href="/css/style.css">

    <style>
        .product-item img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-radius: 8px;
        }

        .product-section {
            margin-bottom: 60px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-section">
            <h2 class="mb-4">Products</h2>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-3 col-lg-3 col-sm-6 col-12 col-product product-item">
                        <figure>
                            <img class="img-fluid" src="~/images/Products/@product.ImageUrl" alt="@product.Name">
                        </figure>

                        <h4 class="mb-1">
                            <a asp-action="Details" asp-controller="Product" asp-route-ProductId="@product.ProductId">
                                @product.Name
                            </a>
                        </h4>
                        <p><span class="emphasis">@product.Price</span></p>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="/js/jquery-3.1.1.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
