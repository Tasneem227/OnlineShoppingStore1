@model List<CartItem>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Shopping Cart</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">

    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .quantity-input {
            width: 70px;
            text-align: center;
        }

        .btn-done {
            margin-top: 5px;
        }

        #cart th, #cart td {
            vertical-align: middle;
        }

        /* لون كل الأسعار بنفس لون زرار Done */
        .product-price, .total-cost {
            font-size: 1.25rem;
            font-weight: bold;
            color: #007bff; /* لون زرار Done */
        }
    </style>
</head>
<body>
    <section class="cart text-center">
        <div class="container">
            <div class="row mb-4">
                <div class="col-sm-6 text-md-left">
                    <a asp-action="ShowAll" asp-controller="Product" ><i class="fas fa-arrow-left mr-2"></i> Continue Shopping</a>
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="mt-5 mb-3">Edit Your Items In The Cart</h2>
                    <p class="mb-5"><span class="primary-color">@Model.Count</span> Items in your cart</p>

                    <form asp-action="UpdateCartItem" asp-controller="Cart" method="post">
                        <table id="cart" class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th style="width:50%">Product</th>
                                    <th style="width:15%">Price</th>
                                    <th style="width:15%">Quantity</th>
                                    <th style="width:20%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td data-th="Product">
                                            <div class="row">
                                                <div class="col-md-3 text-left">
                                                    <img src="~/images/Products/@Model[i].Product?.ImageUrl" alt="" class="img-fluid rounded">
                                                </div>
                                                <div class="col-md-9 text-left mt-2">
                                                    <h5>@Model[i].Product?.Name</h5>
                                                    <p class="text-muted">@Model[i].Product?.Description</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-th="Price" class="text-center">
                                            <span class="product-price">$@Model[i].Product?.Price</span>
                                        </td>
                                        <td data-th="Quantity">
                                            <input type="number" asp-for="@Model[i].Quantity" class="form-control quantity-input" min="1" />
                                        </td>
                                        <td class="actions" data-th="Action">
                                            <div class="d-flex flex-column align-items-center">
                                                <form asp-action="EditQuantity"
                                                      asp-controller="Cart"
                                                      asp-route-Quantity="@Model[i].Quantity"
                                                      asp-route-ProductId="@Model[i].ProductId"
                                                      method="post">
                                                    <button type="submit" class="btn btn-outline-primary btn-done">
                                                        Done
                                                    </button>
                                                </form>
                                                <a asp-action="DeleteItem"
                                                   asp-controller="Cart"
                                                   asp-route-CartItemId="@Model[i].Id"
                                                   asp-route-cartid="@Model[i].CartId"
                                                   class="btn btn-outline-danger mt-2">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>

                                        <!-- hidden inputs -->
                                        <input type="hidden" asp-for="@Model[i].Id" />
                                        <input type="hidden" asp-for="@Model[i].CartId" />
                                        <input type="hidden" asp-for="@Model[i].ProductId" />
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </form>

                    <div class="float-right text-right mt-4">
                        <h4>Total Cost</h4>
                        <h3 class="total-cost">
                            $@Model.Sum(i => (i.Product?.Price ?? 0) * i.Quantity)
                        </h3>
                    </div>

                </div>
            </div>
        </div>
    </section>
</body>
</html>
